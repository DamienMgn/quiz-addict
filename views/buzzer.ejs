<%- include('./partials/header'); -%>

<main>
    <div class="container player-game-container" id="player-view">
        <!-- LISTE DES PARTIES -->
        <div class="game-layout games-list-container">
            <h3 class="legend">Listes des quiz</h3>
            <div class="games-list">
                <ul class="games-list-ul">

                </ul>
            </div>
        </div>

        <!-- PLAYER LOADER -->
        <div class="player loader-container">
            <p class="loader-status">En attente des joueurs pour démarrer la partie</p>
            <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
        </div>

        <!-- PLAYER FORM JOIN GAME -->
        <form class="game-layout form-join-game">
            <fieldset class="fieldset">
                <h3 class="legend">Rejoindre</h3>
                <div class="carousel-cont">
                    <button type="button" class="arrow left-arrow"> < </button>
                    <img id="character" src="/images/assets/characters/zombie1/idle/1.png" alt="personnage à choisir">
                    <button type="button" class="arrow right-arrow"> > </button>
                    <input type="hidden" name="character" id="character-input" value="/images/assets/characters/zombie1/idle/1.png">
                </div>
                <div class="form-group">
                    <label for="join-name">Pseudo</label>
                    <input type="text" name="name" id="join-name" placeholder="Nom" class="form-control form-input" autocomplete="off" autofocus>
                </div>
                <div class="form-group">
                    <label for="join-password">Mot de passe</label>
                    <input type="password" name="password" id="join-password" placeholder="Mot de passe" class="form-control form-input" autocomplete="off">
                </div>
                <button type="submit" class="btn-own btn-game btn-submit">Rejoindre</button>
            </fieldset>
        </form>

        <!-- PLATEAU DU JOUEUR -->
        <div class="player-board-game">
        </div>
    </div>
</main>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
</script>
<script type="text/javascript" src="js/utils.js"></script>
<script type="text/javascript" src="js/buzzer.js"></script>

