<%- include('./partials/header'); -%>

<main class="container game-container">
    <form action="" method="post" class="form-new-game">
        <fieldset class="fieldset">
            <legend class="legend">Créer une nouvelle partie</legend>
            <div class="form-group">
                <label for="name">Nom de la partie</label>
                <input type="text" id="name" name="name" placeholder="nom de la partie" class="form-control form-input" autocomplete="off" autofocus>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" placeholder="mot de passe" class="form-control form-input" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="number">Mot de passe</label>
                <input type="number" name="number" id="number" class="form-control form-input" placeholder="nombre de joueur" autocomplete="off" min="2" max="6" value="2">
                <small id="emailHelp" class="form-text text-muted">De 2 à 6 joueurs !</small>
            </div>
            <button type="submit" class="btn-own btn-game btn-submit">Créer</button>
        </fieldset>
    </form>
    <div class="main-game-container">
        <h3 class="title-h3 main-game-title"></h3>
        <div class="quiz-container">

        </div>
        <div class="loader-container">
            <p class="loader-status">En attente des joueurs</p>
            <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
        </div>
        <div class="players-container">
            <ul class="players-container-ul">

            </ul>
        </div>
    </div>
</main>

<script src="/socket.io/socket.io.js"></script>
